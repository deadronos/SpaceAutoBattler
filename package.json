{
  "name": "space-autobattler",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "test": "vitest --environment happy-dom",
    "serve": "http-server -c-1 -p 8080",
    "serve:dist": "http-server . -c-1 -p 8080",
    "build": "node ./scripts/build.mjs",
    "build-bundle": "node ./scripts/build.mjs",
    "build-standalone": "node ./scripts/build-standalone.mjs",
    "build-standalone:watch": "node ./scripts/build-standalone.mjs --watch",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:playwright": "playwright test -c playwright.config.cjs",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "hash-assets": "node ./scripts/hash-assets.cjs",
    "validate-config": "node ./scripts/validate-config.mjs",
    "generate-memory-index": "node ./scripts/generate_memory_index.mjs",
    "add-memory-node": "node ./scripts/add_memory_node.mjs"
  },
  "devDependencies": {
    "@babel/preset-env": "latest",
    "@playwright/test": "^1.55.0",
    "@types/bun": "latest",
    "@types/node": "^18.19.123",
    "@types/pixelmatch": "^5.2.6",
    "@types/pngjs": "^6.0.5",
    "@types/three": "^0.179.0",
    "@vitest/coverage-v8": "^3.2.4",
    "c8": "^10.1.3",
    "esbuild": "^0.25.9",
    "eslint": "^9.34.0",
    "happy-dom": "^18.0.1",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "pixelmatch": "^7.1.0",
    "pngjs": "^7.0.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "viz": "^1.2.0"
  },
  "dependencies": {
    "@dimforge/rapier3d-compat": "^0.18.2",
    "glob": "^11.0.3",
    "gsap": "^3.13.0",
    "idb-keyval": "^6.2.1",
    "lodash": "^4.17.21",
    "lru-cache": "^11.1.0",
    "pixi.js": "^8.12.0",
    "postprocessing": "^6.37.7",
    "rimraf": "^6.0.1",
    "three": "^0.179.1",
    "three-mesh-bvh": "^0.9.1",
    "three-stdlib": "^2.36.0"
  }
}
